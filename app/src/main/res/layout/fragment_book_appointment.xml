<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BookAppointmentFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Booking System"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your project title"
        android:inputType="text"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/aclonica"/>
    <TextView
        android:id="@+id/sdomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Domain"
        android:textColor="#000000"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:fontFamily="@font/aclonica"
        android:layout_margin="10dp"/>
    <Spinner
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select a service"
        android:layout_below="@id/sdomain"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/sslot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Slot"
        android:textColor="#000000"
        android:layout_below="@id/service"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:fontFamily="@font/aclonica"
        android:layout_margin="10dp"
        />
    <Spinner
        android:id="@+id/slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select a service"
        android:layout_below="@id/sslot"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/bookAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Book Appointment"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:fontFamily="@font/aclonica"
        android:background="#000000"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>